<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="be.rijckaert.tim.animatedvector.MainActivity"
    tools:showIn="@layout/activity_main">

    <be.rijckaert.tim.animatedvector.PlayStateFloatingActionButton
        android:src="@drawable/play_to_pause_animation"
        android:layout_width="wrap_content"
        app:backgroundTint="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:onClick="startAnimation"/>

    <ImageView
        android:src="@drawable/play_to_stop_animation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="startAnimation"/>
</LinearLayout>